---
import 'chota';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />

    <link rel="apple-touch-icon" href="/apple-touch-icon-180x180.png">
    <link rel="icon" href="/favicon.ico">
    <link rel="icon" href="/icon-512x512.png">

    <meta name="description" content="yuma14の個人サイト: Rust、Neovim、ゲーム開発などに関する情報とツール">
    <meta property="og:description" content="yuma14の個人サイト: Rust、Neovim、ゲーム開発などに関する情報とツール">
    <meta property="og:image" content="/ogp.png">
    <meta property="og:title" content="yuma14.net">
    <meta property="og:locale" content="ja_JP">
		<meta name="generator" content={Astro.generator} />
		<title>{title} - yuma14.net</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
body {
  padding-left: 3rem;
  padding-right: 3rem;
  max-width: 1024px;
  margin-left: auto;
  margin-right: auto;
}
</style>
